<h1>Your Cart</h1>
{% for item in cart.items %}
  <div class="cart-item">
    <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.product.title }}">
    <p>{{ item.quantity }} x {{ item.product.title }}</p>
    <p>{{ item.line_price | money }}</p>
  </div>
{% endfor %}
<p>Total: {{ cart.total_price | money }}</p>
<a href="/checkout" class="cta-button">Proceed to Checkout</a>
